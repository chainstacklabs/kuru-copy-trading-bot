# Wallet Configuration
# Your private key for signing transactions (66-character hex string starting with 0x)
PRIVATE_KEY=0xaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa

# Blockchain Configuration
# Monad blockchain RPC URL
MONAD_RPC_URL=https://testnet.monad.xyz

# Kuru Exchange API URL
KURU_API_URL=https://api.kuru.io

# Trading Configuration
# Comma-separated list of wallet addresses to copy trades from
SOURCE_WALLETS=0x1234567890123456789012345678901234567890,0xabcdefabcdefabcdefabcdefabcdefabcdefabcd

# Copy ratio (1.0 = 100%, 0.5 = 50%)
COPY_RATIO=1.0

# Maximum position size in USD
MAX_POSITION_SIZE_USD=10000.0

# Optional Market Filters
# Only copy trades in these markets (comma-separated, leave empty to copy all markets)
MARKET_WHITELIST=

# Never copy trades in these markets (comma-separated)
MARKET_BLACKLIST=

# Operational Settings
# Run in dry-run mode (no actual trades executed)
DRY_RUN=false

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
