# Wallet Configuration
# Your private key for signing transactions
WALLET_PRIVATE_KEY=0xaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa

# Blockchain Configuration
# Network to use: 'testnet' or 'mainnet' (default: testnet)
NETWORK=testnet

# Monad blockchain RPC URL
# Get a free RPC node from Chainstack
MONAD_RPC_URL=https://monad-mainnet.core.chainstack.com/...

# Trading Configuration
# Comma-separated list of wallet addresses to copy trades from
# NOTE: Can be empty if both DRY_RUN=true and DRY_RUN_TRACK_ALL_MARKET_ORDERS=true
# (in that mode, all market activity is tracked, not just specific source wallets)
SOURCE_WALLETS=

# Comma-separated list of Kuru market contract addresses to monitor
# Example: 0x122C0D8683Cab344163fB73E28E741754257e3Fa
MARKET_ADDRESSES=

# Copy ratio (1.0 = 100%, 0.5 = 50%)
COPY_RATIO=0.1

# Risk Management Settings
# Maximum order size in USD - caps each individual order (default: 100.0)
MAX_ORDER_SIZE=100.0
# Minimum order size in USD - orders below this will be increased to this minimum (default: 10.0)
MIN_ORDER_SIZE=10.0
# Minimum balance threshold - bot stops trading if balance of a margin account falls below this (default: 100.0)
MIN_BALANCE_THRESHOLD=100.0
# Maximum total exposure across all markets in USD (default: 5000.0)
MAX_TOTAL_EXPOSURE=5000.0

# Optional Market Filters
# Only copy trades in these markets (comma-separated, leave empty to copy all markets)
MARKET_WHITELIST=
# Never copy trades in these markets (comma-separated)
MARKET_BLACKLIST=

# Operational Settings
# Run in dry-run mode (no actual trades executed)
DRY_RUN=false
# In dry-run mode, track ALL orders on the market (not just source wallets)
# Useful for testing the bot's monitoring and parsing capabilities
# When enabled with DRY_RUN=true, SOURCE_WALLETS can be empty (all activity is tracked)
DRY_RUN_TRACK_ALL_MARKET_ORDERS=false

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
