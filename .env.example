# Wallet Configuration
# Your private key for signing transactions
WALLET_PRIVATE_KEY=0xaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa

# Blockchain Configuration
# Network to use: 'testnet' or 'mainnet' (default: testnet)
NETWORK=testnet

# Monad blockchain RPC URL
# Get a free RPC node from Chainstack
MONAD_RPC_URL=https://monad-mainnet.core.chainstack.com/...

# Kuru Exchange API URL
# Testnet: https://api.kuru.io
# Mainnet: https://api.kuru.io
KURU_API_URL=https://api.kuru.io

# Trading Configuration
# Comma-separated list of wallet addresses to copy trades from
SOURCE_WALLETS=0x1234567890123456789012345678901234567890,0xabcdefabcdefabcdefabcdefabcdefabcdefabcd

# Comma-separated list of Kuru market contract addresses to monitor
# Example: MON-USDC market (testnet): 0xe53E39face99011c338d5C54EC332c7C9e271872
MARKET_ADDRESSES=0xe53E39face99011c338d5C54EC332c7C9e271872

# Copy ratio (1.0 = 100%, 0.5 = 50%)
COPY_RATIO=1.0

# Risk Management Settings
# Maximum position size per market in USD (default: 1000.0)
MAX_POSITION_SIZE=1000.0

# Minimum order size in USD (default: 10.0)
MIN_ORDER_SIZE=10.0

# Minimum balance threshold - bot stops trading if balance falls below this (default: 100.0)
MIN_BALANCE_THRESHOLD=100.0

# Maximum total exposure across all markets in USD (default: 5000.0)
MAX_TOTAL_EXPOSURE=5000.0

# Optional Market Filters
# Only copy trades in these markets (comma-separated, leave empty to copy all markets)
MARKET_WHITELIST=

# Never copy trades in these markets (comma-separated)
MARKET_BLACKLIST=

# Operational Settings
# Run in dry-run mode (no actual trades executed)
DRY_RUN=false

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
